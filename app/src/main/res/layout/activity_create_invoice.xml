<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tahutelorcommunity.bukapagar.Activity.CreateInvoiceActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="8dp"
            app:titleTextColor="@color/colorTextWhite"
            app:title="Tambah Kamar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.tahutelorcommunity.bukapagar.Activity.CreatePenginapanActivity">


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_room"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Data Pemesan"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginTop="20dp"
                            android:hint="Masukkan nama anda.." />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/duration"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_marginTop="20dp"
                                android:hint="Masukkan durasi menginap"
                                android:inputType="number" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Hari"
                                android:textSize="20dp" />
                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_spec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Metode Pembayaran"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Biaya Transaksi :"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Atur durasi penginapan"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Bayar menggunakan :"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioButton

                                android:layout_margin="10dp"
                                android:text="BukaDompet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:layout_margin="10dp"
                                android:text="Mandiri Clickpay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:layout_margin="10dp"
                                android:text="CIMB Clicks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:layout_margin="10dp"
                                android:text="BCA Clickpay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:layout_margin="10dp"
                                android:text="Kartu Visa / Mastercard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:layout_margin="10dp"
                                android:text="Indomaret"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <RadioButton
                                android:layout_margin="10dp"
                                android:text="Alfamart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btnPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lanjutkan Pembelian" />
</LinearLayout>
